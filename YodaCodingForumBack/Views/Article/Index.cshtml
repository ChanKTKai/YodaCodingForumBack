@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor hca
@model YodaCodingForumBack.Models.SearchClass
@{
    ViewData["Title"] = "文章管理";
}
<head>
    <style>
        /*字串過長變.......*/
        .relatedArticle {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card-info card card-dark primary mt-3">
                        <div class="card-header">
                            <h3 class="card-title">文章清單</h3>

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>文章標題</th>
                                        <th>文章狀態</th>
                                        <th>瀏覽數</th>
                                        <th>按讚數</th>
                                        <th>發文者</th>
                                        <th>發文時間</th>
                                        <th>最後修改時間</th>
                                        <th>版次</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*排序*@
                                    @{int i = 0;}
                                    @foreach (var article in Model.articleList)
                                    {
                                        <tr>
                                            <td>@{i += 1;}@i</td>
                                            <td>
                                                <a class="btn btn-info btn-sm" href="/article/articledetails?a=@article.ArticleId">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                            <td class="relatedArticle">@article.ArticleTitle</td>
                                            @if (article.ArticleStatus == "N")
                                            {
                                                <td class="error text-green">正常</td>
                                            }
                                            else
                                            {
                                                <td class="error text-danger">已刪除</td>
                                            }
                                            <td>@article.ArticleViews</td>
                                            <td>@article.ArticleLike</td>
                                            <td>@article.CreateUser</td>
                                            <td>@article.CreateDate</td>
                                            <td>@article.LastupdateDate</td>
                                            <td>@article.Version</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>

    </section>
</div>










